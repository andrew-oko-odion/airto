<p id="notice"><%= notice %></p>

<h1>Event Spaces</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Rate</th>
      <th>Description</th>
      <th>Amenity</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_spaces.each do |event_space| %>
      <tr>
        <td><%= event_space.location %></td>
        <td><%= event_space.rate %></td>
        <td><%= event_space.description %></td>
        <td><%= event_space.amenity %></td>
        <td><%= event_space.user %></td>
        <td><%= link_to 'Show', event_space %></td>
        <td><%= link_to 'Edit', edit_event_space_path(event_space) %></td>
        <td><%= link_to 'Destroy', event_space, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event Space', new_event_space_path %>
